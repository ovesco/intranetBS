{# datepicker #}
{% block datepicker_widget -%}
    <div class="field">
        {{ block('form_label') }}
        <input type="text" {{ block('widget_attributes') }} class="datepicker" {% if value is not empty %}value="{{ value|date('Y-m-d') }}"{% endif %} />
    </div>
{%- endblock datepicker_widget %}