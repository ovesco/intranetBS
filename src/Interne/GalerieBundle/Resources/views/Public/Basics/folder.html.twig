
<div class="ui tall stacked segment foldum">

    {% if dossier.locked == false %}
    <div class="ui inverted dimmer">
        <div class="content">
            <div class="center">
                <a href="{{ path('public_galerie_voir_dossier', {dossier: dossier.id}) }}" class="ui blue button">Ouvrir</a>
            </div>
        </div>
    </div>
    {% else %}
        <div class="ui dimmer">
            <div class="content">
                <div class="center">
                    <h3 class="ui inverted header">Dossier innaccessible pour l'instant</h3>
                </div>
            </div>
        </div>
    {% endif %}

    {% set image = dossier.image %}
    {% if image is not null %}
        <div class="image"><img src="{{ asset(dossier.image.thumbnailPath) }}"></div>
    {% else %}
        <div class="image"><img src="{{ asset('galerie/default_cover.jpg') }}"></div>
    {% endif %}
    <span class="title">{{ dossier.nom }}</span>
    {% if dossier.albums|length > 0 %}
        <span class="desc">{{ dossier.albums|length }} albums</span>
    {% else %}
        <span class="desc">{{ dossier.enfants|length }} sous-dossiers</span>
    {% endif %}
</div>