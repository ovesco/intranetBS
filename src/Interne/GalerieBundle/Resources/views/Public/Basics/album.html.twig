
<div class="ui piled segment foldum">

    <div class="ui inverted dimmer">
        <div class="content">
            <div class="center">
                <a href="{{ path('public_galerie_voir_album', {album: album.id}) }}" class="ui teal button">Voir</a>
            </div>
        </div>
    </div>


    {% set image = album.image %}
    {% if image is not null %}
        <div class="image"><img src="{{ asset(album.image.thumbnailPath) }}"></div>
    {% else %}
        <div class="image"><img src="{{ asset('galerie/default_cover.jpg') }}"></div>
    {% endif %}

    <span class="title">{{ album.nom }}</span>
    <span class="desc">{{ album.photos|length }} photos</span>
</div>