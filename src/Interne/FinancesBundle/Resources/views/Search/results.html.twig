

<div id="search-infos-context" class="tab-context">

    <div class="ui top attached tabular menu">
        <div class="active item" data-tab="factures">
            Factures
            <div class="ui green circular label">{{ factures|length }}</div>
        </div>
        <div class="item" data-tab="creances">
            Creances
            <div class="ui green circular label">{{ creances|length }}</div>
        </div>
        <div class="item">
            <div class="ui button" onclick="$('#modal-facture-searchForm').modal('show');"><i class="search icon"></i>Recherche</div>
        </div>
    </div>
    <div class="ui bottom attached active tab segment" data-tab="factures">
        <div class="ui grid" id="factureSearchContent">
            <div class="row">
                <div class="ui compact menu">
                    <div class="ui simple dropdown item">
                        <i class="dropdown icon"></i>
                        Action en masse
                        <div class="menu">
                            <div class="item"><i class="print icon"></i>Imprimer (todo)</div>
                            <div class="item"><i class="send icon"></i>Envoyer (todo)</div>
                            <div class="item" onclick="openRappelForm(null,'searchAddToListe')"><i class="add square icon"></i>Ajouter un rappel</div>
                            <div class="item" onclick="deleteListeFacture();"><i class="trash icon"></i>Supprimer la liste</div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="column">
                    <table class="ui table" id="factureSearchTable">
                        <thead>
                        <tr>
                            <th rowspan="2">
                                <input type="checkbox" onclick="selectAllFacture(this);">
                            </th>
                            <th rowspan="2">Num. Réf.</th>
                            <th rowspan="2">Statut</th>
                            <th colspan="4">Montants</th>
                            <th>Actions</th>
                        </tr>
                        <tr>
                            <th>Créances</th>
                            <th>Frais rappels</th>
                            <th>Total</th>
                            <th>Reçu</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if factures is not empty %}
                            {% for facture in factures %}
                                <tr>
                                    <td>
                                        <input class="selectFacture" type="checkbox" value="{{ facture.id }}"/>
                                    </td>
                                    <td>N°{{ facture.id }}</td>
                                    {% if facture.statut == 'ouverte' %}
                                        <td><div class="ui label blue">Ouverte</div></td>
                                    {% elseif facture.statut == 'payee' %}
                                        <td><div class="ui label green">Payée</div></td>
                                    {% else %}
                                        <td></td>
                                    {% endif %}
                                    <td>{{ facture.montantEmisCreances|number_format(2, '.', ',') }}</td>
                                    <td>{{ facture.montantEmisRappels|number_format(2, '.', ',') }}</td>
                                    <td>{{ facture.montantEmis|number_format(2, '.', ',') }}</td>
                                    <td>{{ facture.montantRecu|number_format(2, '.', ',') }}</td>
                                    <td>
                                        <a class="popupable"
                                           data-content="Supprimer la facture"
                                           onclick="deleteFactureFromSearch({{ facture.id }});">
                                            <i class="trash icon red"></i>
                                        </a>

                                        <a class="popupable"
                                           data-content="Imprimer la facture"
                                           href="{{ path('interne_fiances_print_factures', {'id' : facture.id} ) }}"
                                           target="_blank">
                                            <i class="print icon"></i>
                                        </a>

                                        <a class="popupable"
                                           data-content="Détails de la facture"
                                           onclick="openFactureShow({{ facture.id }},'search');" >
                                            <i class="zoom icon"></i>
                                        </a>

                                        {% if facture.statut == 'ouverte' %}
                                        <a class="popupable"
                                           data-content="Ajouter un rappel"
                                           onclick="openRappelForm({{ facture.id }},'search');" >
                                            <i class="add square icon"></i>
                                        </a>

                                        <a class="popupable"
                                           data-content="Envoyer"
                                           onclick="factureEnvoi({{ facture.id }});" >
                                            <i class="send icon"></i>
                                        </a>

                                        {% endif %}

                                        <a class="popupable"
                                           data-content="Exclure ce résultat de la recherche"
                                           onclick="outOfSearch({{ facture.id }},'facture');" >
                                            <i class="delete red icon"></i>
                                        </a>



                                    </td>

                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="ui bottom attached tab segment" data-tab="creances">

        <div class="ui grid" id="creanceSearchContent">
            <div class="row">

                <div class="ui compact menu">
                    <div class="ui simple dropdown item">
                        <i class="dropdown icon"></i>
                        Action en masse
                        <div class="menu">
                            <div class="item" onclick="createFactureFromSearch();"><i class="file text outline icon"></i>Facturer</div>
                            <div class="item" onclick="deleteListeCreance();"><i class="trash icon"></i>Supprimer la liste</div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="column">

                    <table class="ui table" id="creanceSearchTable">
                        <thead>
                        <tr>
                            <th rowspan="2">
                                <input type="checkbox" onclick="selectAllCreances(this);">
                            </th>
                            <th rowspan="2">Statut</th>
                            <th rowspan="2">Facture</th>
                            <th rowspan="2">Propriétaire</th>

                            <th rowspan="2">Titre</th>

                            <th colspan="2">Montants</th>
                            <th rowspan="2">Actions</th>
                        </tr>
                        <tr>

                            <th>Emis</th>
                            <th>Reçu</th>

                        </tr>
                        </thead>

                        <tbody>
                        {% if creances is not empty %}

                            {# On commence par les creances non facturée #}
                            {% for creance in creances  %}

                                <tr>
                                    <td>
                                        {% if creance.facture is  empty %}
                                            <input class="selectCreance" type="checkbox" value="{{ creance.id }}">
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if creance.facture is not empty %}
                                            {% if creance.facture.statut == 'ouverte' %}
                                                <div class="ui label blue">Ouverte</div>
                                            {% elseif creance.facture.statut == 'payee' %}
                                                <div class="ui label green">Payée</div>
                                            {% endif %}

                                        {% else %}
                                            <div class="ui label orange">En attente</div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if creance.facture is not empty %}
                                            N°{{ creance.facture.id }}
                                        {% else %}
                                            En attente
                                        {% endif %}

                                    </td>
                                    <td>
                                        {% if creance.getOwner.isClass('Membre') %}
                                            {{ creance.membre.prenom }} {{ creance.membre.nom }}
                                        {% elseif creance.getOwner.isClass('Famille') %}
                                            {{ creance.famille }}
                                        {% endif %}

                                    </td>

                                    <td>{{ creance.titre }}</td>

                                    <td>{{ creance.montantEmis|number_format(2, '.', ',') }}</td>
                                    <td>{{ creance.montantRecu|number_format(2, '.', ',') }}</td>
                                    <td>
                                        {% if creance.facture is empty %}

                                            <a onclick="deleteCreanceFromSearch({{ creance.id }});" >
                                                <i class="trash red icon"></i>
                                            </a>


                                        {% endif %}
                                        <a onclick="openCreanceShow({{ creance.id }});" >
                                            <i class="zoom icon"></i>
                                        </a>

                                        <a onclick="outOfSearch({{ creance.id }},'creance');" >
                                            <i class="delete red icon"></i>
                                        </a>

                                    </td>
                                </tr>


                            {% endfor %}



                        {% else %}

                        {% endif %}

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>




