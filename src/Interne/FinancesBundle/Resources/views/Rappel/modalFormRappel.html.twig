{% form_theme form 'AppBundle:Templates:form_template.html.twig' %}

{% set idForm  = 'addRappelForm' %}
<div class="ui small modal" id="modal-display-rappel-form" aria-hidden="true">
    <div class="header">Ajouter un rappel</div>
    <div class="content" style="overflow-y:auto">

        {{ form_start(form, {'attr': {'id': idForm}}) }}

        <div class="ui form">

            {{ form_row(form.dateCreation) }}
            {{ form_row(form.montantEmis) }}
            {{ form_rest(form) }}

        </div>

        {{ form_end(form) }}

    </div>
    <div class="actions">

        {% if idFacture == '' %}
            <div class="ui button blue" onclick="addRappelToListeOfFacture('{{ idForm }}')" >Ajouter</div>
        {% else %}
            <div class="ui button blue" onclick="addRappel({{ idFacture }},'{{ idForm }}')" >Ajouter</div>
        {% endif %}


    </div>
</div>


