{% extends 'layout.html.twig' %}

{% import _self as macro %}

{% block titre %}Hierarchie{% endblock %}

{% block content %}

    <div class="ui page grid">
        <div class="row">
            <div class="column">
                <div class="ui segment">


                    <div class="ui small button" onclick="addChild(null,'Groupe racine')">
                        <i class="add icon"></i>
                        Ajouter un groupe racine
                    </div>

                    {{ macro.hierarchie(highestGroupes)}}




                </div>
            </div>
        </div>
    </div>





{% endblock %}




{% macro hierarchie(parents) %}
    {% if parents %}
        <div class="ui list">
        {% for parent in parents %}
            <div class="item">
                <i class="top aligned long arrow right icon"></i>
                <div class="content">
                    <div class="ui compact menu">
                        <a class="item" href="{{ path('interne_voir_groupe', {'groupe':parent.id}) }}">
                            {{ parent.nom }}

                        </a>
                        <a class="item">{{ parent.type.nom }}</a>
                        <a class="item">

                            Effectifs actuel: (trop lourd pour le chargement){#{{ parent.getMembersRecursive|length }}#}

                        </a>

                        <a class="item" onclick="addChild({{ parent.id }},'{{ parent.nom }}')> {{ parent.type.nom }}">
                            <i class="add icon"></i>
                            {% if parent.active %}
                                <div class="floating ui green label">Actif</div>
                            {% else %}
                                <div class="floating ui red label">Inactif</div>
                            {% endif %}
                        </a>
                    </div>

                    {% if parent.enfants %}
                        <div class="list">
                            {{ _self.hierarchie(parent.enfants) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
    </div>
{% endmacro %}



