{% extends 'layout.html.twig' %}

{% import _self as macro %}

{% block titre %}Hierarchie{% endblock %}

{% block content %}

    <div class="ui page grid">
        <div class="row">
            <div class="column">
                <div class="ui segment">


                    <div class="ui small button addGroupeRacine">
                        <i class="add icon"></i>
                        Ajouter un groupe racine
                    </div>

                    {{ macro.hierarchie(highestGroupes)}}




                </div>
            </div>
        </div>
    </div>





{% endblock %}

{% block js %}

    {% javascripts
    '@AppBundle/Resources/public/js/Structure/page_hierarchie.js'%}
    <script src="{{ asset_url }}"></script>

    {% endjavascripts %}


{% endblock %}




{% macro hierarchie(parents) %}
    {% if parents %}
        <div class="ui list">
        {% for parent in parents %}
            <div class="item">
                <i class="top aligned long arrow right icon"></i>
                <div class="content">
                    <table class="ui table">
                        <tr>
                            <td>
                                <a href="{{ path('interne_voir_groupe', {'groupe':parent.id}) }}">
                                    {{ parent.nom }}
                                </a>
                            </td>
                            <td>{{ parent.groupeModel.nom }}</td>
                            <td>
                                {% if parent.active %}
                                    <div class="ui label">Actif</div>
                                {% else %}
                                    <div class="ui label">Inactif</div>
                                {% endif %}
                            </td>
                            <td>
                                <div class="ui mini icon button addChildGroupe" data-id="{{ parent.id }}">
                                    <i class="add icon"></i>
                                </div>
                                <div class="ui mini icon button editGroupe" data-id="{{ parent.id }}">
                                    <i class="configure icon"></i>
                                </div>
                            </td>





                        </tr>



                    </table>

                    {% if parent.enfants %}
                        <div class="list">
                            {{ _self.hierarchie(parent.enfants) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
    </div>
{% endmacro %}



