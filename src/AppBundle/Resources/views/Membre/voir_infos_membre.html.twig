<div class="ui grid">
    <div class="row">
        <div class="five wide column">

            <table class="ui definition small table">

                <tbody>

                {{ form_row(membreForm.prenom) }}
                {{ form_row(membreForm.naissance) }}
                {{ form_row(membreForm.sexe) }}

                </tbody>
            </table>


            <table class="ui definition small table">
                <tbody>

                {{ form_row(membreForm.numeroBs) }}
                {{ form_row(membreForm.inscription) }}
                {{ form_row(membreForm.statut) }}
                {{ form_row(membreForm.envoiFacture) }}

                </tbody>
            </table>

            <table class="ui definition small table">
                <tbody>

                {{ form_row(membreForm.numeroAvs) }}
                {{ form_row(membreForm.iban) }}
                {{ form_row(membreForm.remarques) }}

                </tbody>
            </table>

        </div>

        <div class="eleven wide column">
            <h4>Attributions actuel</h4>
            {% include "AppBundle:Attribution:listeAttributionActuel.html.twig" with {'attributions':membre.activeAttributions} %}
        </div>

    </div>
</div>



