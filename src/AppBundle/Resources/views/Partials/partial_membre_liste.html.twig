{#
    Cette partiale affiche une liste pour afficher des membres. Il faudrait
    l'utiliser au maximum pour standardiser l'affichage des tables. Elle supporte toutes les actions
    vitales au travers d'une api chillos
#}

<table class="ui table membre-datatable" data-swag="it">
    <thead>
    <tr>
        <th>
            <input type="checkbox" class="table-checkbox" />
        </td>
        </th>
        <th>Nom</th>
        <th>Dans la BS</th>
        <th>Naissance</th>
        <th>Num√©ro BS</th>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
    {% for membre in membres %}
        <tr data-membre-id="{{ membre.id }}">
            <td></td>
            <td>
                <a data-position="left center" class="popupable" href="{{ path('interne_voir_membre', {membre: membre.id}) }}">{{ membre.prenom|capitalize }} {{ membre.nom|capitalize }}</a>
                {% include 'AppBundle:Popup:popup_membre.html.twig' with {'membre' : membre, 'blocks' : ['personal', 'famille']} %}
            </td>
            <td>{{ membre.activeAttribution.fonction.nom|capitalize }} - {{ membre.activeAttribution.groupe.nom|capitalize }}</td>
            <td>{{ membre.naissance|date("d.m.Y") }}</td>
            <td>{{ membre.numeroBs }}</td>
            <td></td>
        </tr>
    {% endfor %}
    </tbody>
</table>