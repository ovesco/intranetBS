
{% macro generateBackground(debut, fin) %}

    {% set val = datesToPercents(debut, fin) %}


    background: #ffffff;
    background: -moz-linear-gradient(left, #FAFBFF 0%, #F5F7FF {{ val }}%, #ffffff {{ val + 1 }}%, #ffffff 100%);
    background: -webkit-linear-gradient(left, #FAFBFF 0%,#F5F7FF {{ val }}%,#ffffff {{ val + 1 }}%,#ffffff 100%);
    background: linear-gradient(to right, #FAFBFF 0%,#F5F7FF {{ val }}%,#ffffff {{ val + 1 }}%,#ffffff 100%);

{% endmacro %}