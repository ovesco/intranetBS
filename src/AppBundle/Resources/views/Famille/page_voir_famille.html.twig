{% extends 'AppBundle:Layout:layout.html.twig' %}

{% block titre %}
    Famille {{ famille.nom|capitalize }}
{% endblock %}

{% form_theme familleForm ':Templates/Form:ajax_edit.html.twig' %}

{% block content %}

    <div class="ui page grid">

        <div class="column">

            <h1>Les {{ famille.nom|capitalize }}</h1>



            <h2>Membres aux scouts</h2>
            <div class="ui segment">
                <table class="ui table">
                    <thead>
                    <tr>
                        <th>Prénom</th>
                        <th>Unité</th>
                        <th>Date de naissance</th>
                        <th>Numéro BS</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for membre in famille.membres %}
                        <tr>
                            <td><a href="{{ path('interne_voir_membre', {membre:membre.id}) }}">{{ membre.prenom|capitalize }}</a></td>
                            <td>{{ membre.activeAttribution.fonction.nom }} - {{ membre.activeAttribution.groupe.nom }}</td>
                            <td>{{ membre.naissance|date('d.m.Y') }}</td>
                            <td>{{ membre.numeroBs }}</td>
                            <td>
                                <a href="{{ path('interne_voir_membre', {membre:membre.id}) }}" class="circular ui mini blue icon button">
                                    <i class="share icon"></i>
                                </a>

                                <a class="ui circular icon top left pointing dropdown mini green button">
                                    <i class="list icon"></i>
                                    <div class="menu">
                                        <div class="header">Ajouter à une liste</div>
                                        {% for liste in listing.listes %}
                                            <div onclick="listing.addElements('{{ liste.token }}', {{ membre.id }});" class="item">{{ liste.name }}</div>
                                        {% endfor %}
                                    </div>
                                </a>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>


            <h2>Les parents<a class="anchor" id="parents"></a></h2>
            <div class="ui segment">
                <div class="ui grid">



                        <div class="eight wide column">
                            <h3>Mère</h3>
                            {% include "AppBundle:Geniteur:showWithForm.html.twig" with {'geniteur':familleForm.mere} %}
                        </div>

                        <div class="eight wide column">
                            <h3>Père</h3>

                            {% include "AppBundle:Geniteur:showWithForm.html.twig" with {'geniteur':familleForm.pere} %}
                        </div>




                </div>

            </div>

            <h2>Contact<a class="anchor" id="contact"></a></h2>
            <div class="ui segment">

                {% include "AppBundle:Contact:voir_contact_famille.html.twig" with {'familleForm':familleForm, 'famille':famille, } %}

            </div>

            <h2>Factures et créances<a class="anchor" id="finances"></a></h2>
            <div class="ui segment">

                {# Insertion de la partie facture et créance pour le membre #}
                {% include "InterneFinancesBundle:Interface:interface.html.twig" with {'ownerEntity': famille } %}

            </div>



        </div>

    </div>
