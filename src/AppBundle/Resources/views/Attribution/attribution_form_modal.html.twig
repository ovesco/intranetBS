{% extends "AppBundle:Templates:modal_small.html.twig" %}

{% if form.id is not defined %}
    {%  set header = 'Ajouter une attribution' %}
    {%  set buttonText = 'Ajouter' %}
{% else %}
    {%  set header = 'Modifier une attribution' %}
    {%  set buttonText = 'Modifier' %}
{% endif %}

{% block header %}
    {{ header }}
{% endblock %}

{% block content %}

    {{ form_start(form, {'attr': {'class': 'ui form ajax'}}) }}

    {{ form_errors(form) }}

    {% for form_line in form %}
        {{ form_row(form_line) }}
    {% endfor %}

    <div class="ui field">
        <input type="submit" class="ui green button" value="{{ buttonText }}"/>
    </div>

    {{ form_end(form) }}

{% endblock %}

