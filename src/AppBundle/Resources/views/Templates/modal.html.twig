{# ce template définit les modals! à utiliser un max!!! #}

<div class="ui {% block class %}{% endblock %} modal">
    <i class="close icon"></i>
    <div class="header">
        {% block header %}{% endblock %}
    </div>
    <div class="content" style="overflow-y:auto">

        {% block content %}{% endblock %}

        {% block js %}
            <script>
                $(document).ready(function () {
                    bindForm();
                    semantic_init();
                });
            </script>
        {% endblock %}

    </div>
</div>
