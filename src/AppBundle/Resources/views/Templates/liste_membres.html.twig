{% macro listeMembres(name, membres) %}

    {% import "@App/Templates/liste.html.twig" as listMacro %}

    {% set toolbar =
    {
    'masse_actions':[
    ['flag','Ajouter une attribution','event_masse_membre_attribution_ajout'],
    ['star','Ajouter une distinction','event_masse_membre_distinction_ajout'],
    ['money','Ajouter une cr√©ance','event_masse_membre_creance_ajout']
    ],
    'masse_export':[
    ['file pdf outline','PDF','event_masse_membre_export_pdf'],
    ['file excel outline','Excel (CSV)','event_masse_membre_export_csv'],
    ['mail','Publipostage','event_masse_membre_export_publipostage']
    ],
    'search_bar':true,
    'selection_buttons':true,
    'paging':[10,20,50],
    'sizing_label':'membres'} %}

    {% set headers = [['Prenom', 'Nom', 'Fonction', 'Num. BS', 'Naissance', 'Actions']] %}

    {% set columns = ['prenom', 'nom', 'activeAttribution.fonction.nom', 'numeroBs', 'naissance'] %}

    {% set actions = [
    {'icon':'zoom','label':'Afficher','event':'event_membre_page'},
    {'icon':'delete','label':'Enlever','event':'event_liste_delete_element'}
    ] %}

    {% set filters = [
    {'naissance':'date'}
    ] %}

    {{ listMacro.liste(name, membres, headers, columns, actions, null, filters, toolbar) }}


{% endmacro %}
